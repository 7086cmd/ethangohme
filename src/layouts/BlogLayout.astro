---
import  ChineseBadge from '../components/ChineseBadge.astro'
import MainLayout from './MainLayout.astro'

const { frontmatter } = Astro.props
---

<MainLayout title={ frontmatter.title }>
  <h1 class="flex items-center">{ frontmatter.title } <ChineseBadge isCn={ frontmatter.cn }/></h1>
  <slot />
  { frontmatter.inProgress ? <div class="flex items-center w-100% mt-30px font-900 justify-center text-22px">—— STILL IN PROGRESS<span class="i-mdi-hammer p-5px text-inherit" />——</div> : <div/> }
</MainLayout>